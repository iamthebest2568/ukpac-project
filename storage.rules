rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow read access to public assets
    match /{allPaths=**} {
      allow read: if true;
    }

    // Restrict writes to 'designs/' path to authenticated users only (or server)
    match /designs/{allPaths=**} {
      allow write: if request.auth != null && request.time < timestamp("2100-01-01T00:00:00Z");
      allow read: if true;
    }

    // Fallback: deny other writes
    match /{rest=**} {
      allow write: if false;
    }
  }
}
