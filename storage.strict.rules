rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow read for public assets
    match /{allPaths=**} {
      allow read: if true;
    }

    // Allow client writes only to designs/{project}_... under authenticated users
    match /designs/{fileName} {
      allow write: if request.auth != null && request.auth.token.email_verified == true && fileName.matches('^(beforecitychange|mydreambus)_[0-9]+_.*\\.png$');
      allow read: if true;
    }

    // Deny writes elsewhere
    match /{rest=**} {
      allow write: if false;
    }
  }
}
